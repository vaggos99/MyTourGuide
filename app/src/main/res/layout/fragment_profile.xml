<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginTop="10dp"
           />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/interests"
            android:layout_marginStart="5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp">

            <Button
                android:id="@+id/culture_button"
                style="@style/InterestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/Culture"
                app:icon="@drawable/button_icon"
                app:layout_constraintBottom_toBottomOf="@+id/sport_button"
                app:layout_constraintEnd_toStartOf="@+id/sport_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/sport_button"
                style="@style/InterestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/Sport"
                app:icon="@drawable/button_icon"
                app:layout_constraintBottom_toTopOf="@+id/religion_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/culture_button"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/religion_button"
                style="@style/InterestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/Religion"
                app:icon="@drawable/button_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/strolling_button"
                app:layout_constraintTop_toBottomOf="@+id/sport_button" />

            <Button
                android:id="@+id/strolling_button"
                style="@style/InterestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/Strolling"
                app:icon="@drawable/button_icon"
                app:layout_constraintBottom_toBottomOf="@+id/religion_button"
                app:layout_constraintEnd_toStartOf="@+id/religion_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/accessibility"
            android:layout_marginStart="5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox_Easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/checkBox_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="2"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox_Easy"
                app:layout_constraintStart_toEndOf="@+id/checkBox_Easy" />

            <CheckBox
                android:id="@+id/checkBox_Hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="3"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox_Easy"
                app:layout_constraintStart_toEndOf="@+id/checkBox_Medium" />

            <ImageButton
                android:id="@+id/info_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_info_24"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox_Hard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>