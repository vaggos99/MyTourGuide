<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="@color/primaryDarkColor" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="@color/primaryColor" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="@color/primaryDarkColor" />
    <!--Default Background Color -->
<item android:state_checked="true"  android:color="@color/primaryDarkColor" />
    <item android:color="@android:color/transparent" android:state_checked="false"/>
</selector>